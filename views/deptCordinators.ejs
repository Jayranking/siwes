<!DOCTYPE html>
<html lang="en">
<head>
  <title>Department Cordinators</title>
  <%- include('./snippets/dashboardHeader.ejs') %>
</head>
<body>
    <%- include('./snippets/dashboardNavbar.ejs') %>


    <div class="container-fluid">
      <div class="row">
        <%- include('./snippets/dashboardSidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="container">
                <div class="text-center mt-5">
                    <h4 class="text-primary fw-bold">Department Cordinators</h4>
                </div>
            </div>
            <div class="text-center mb-2 mb-md-0 ">
                <div class="btn-group me-2 mx-auto">
                  <a href="/register-deptCordinator"><button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="fa fa-user"></i>
                    Register Single
                  </button></a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="fa fa-upload"></i>
                    Upload Multiple
                  </button>
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary gap-1">
                    <i class="fa fa-download"></i>
                    Download Excel Template
                </button>
            </div>
            <table id="example" class="table small table-sm table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Faculty</th>
                        <th>Dept</th>
                        <th>School No</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (context) { %>
                     <% context.deptCordinators.forEach(deptCordinator => { %>
                        <tr>
                            <td><%= deptCordinator.fullname %></td>
                            <td><%= deptCordinator.faculty %></td>
                            <td><%= deptCordinator.dept %></td>
                            <td><%= deptCordinator.schReg_no %></td>
                            <td><%= deptCordinator.gender %></td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-danger btn-sm me-2"><i class="fas fa-trash"></i></button>
                                    <button class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></button>
                                </div>
                            </td>
                        </tr>
                     <% }) %>
                    <% } %>
                </tbody>
            </table>
        </main>
      </div>
    </div>


    <%- include('./snippets/dashboardScripts.ejs') %>
</body>
</html>
