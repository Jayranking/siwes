<!DOCTYPE html>
<html lang="en">
<head>
  <title>dashboard</title>
  <%- include('./snippets/dashboardHeader.ejs') %>
</head>
<body>
    <%- include('./snippets/dashboardNavbar.ejs') %>


    <div class="container-fluid">
      <div class="row">
        <%- include('./snippets/dashboardSidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
         
          <div class="container my-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-center bg-primary shadow text-white">
                        <div class="card-body">
                            <h6 class="card-title">Number of Faculties</h6>
                            <p class="card-text fs-3">1</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow bg-success text-white">
                        <div class="card-body">
                            <h6 class="card-title">Number of Departments</h6>
                            <p class="card-text fs-3">2</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow bg-warning text-white">
                        <div class="card-body">
                            <h6 class="card-title">Total Number of Students</h6>
                            <p class="card-text fs-3">120</p>
                        </div>
                    </div>
                </div>
            </div>
    
            <div class="mt-2">
                <h5 class="text-center">Enrollment Graph</h5>
                <div class="card p-4 shadow">
                    <canvas id="enrollmentGraph" width="700" height="200"></canvas>
                </div>
            </div>
          </div>
  
        </main>
      </div>
    </div>

     <!-- Chart.js (for the graph) -->
     <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
     <script>
         // Sample data for the graph
         const ctx = document.getElementById('enrollmentGraph').getContext('2d');
         const enrollmentGraph = new Chart(ctx, {
             type: 'bar', // You can change this to 'line', 'pie', etc.
             data: {
                 labels: ['Physical Science', 'Engineering', 'Humanities', 'Agriculture', 'Education', 'Biological Science'],
                 datasets: [{
                     label: 'Number of Students',
                     data: [10, 20, 30, 40, 50, 60],
                     backgroundColor: 'rgba(54, 162, 235, 0.5)',
                     borderColor: 'rgba(54, 162, 235, 1)',
                     borderWidth: 1
                 }]
             },
             options: {
                 scales: {
                     y: {
                         beginAtZero: true
                     }
                 }
             }
         });
     </script>
    <%- include('./snippets/dashboardScripts.ejs') %>
</body>
</html>