<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - SIWES App</title>
    <%- include('./snippets/header.ejs') %>
</head>
<body>
    <%- include('./snippets/navbar.ejs') %>


    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <h3 class="text-center fw-bold">Login</h3>
                    <form id="loginForm">
                        <div class="form-group mb-4">
                            <input type="text" name="schReg_no" class="form-control" id="email" placeholder="Enter Reg Number">
                            <div class="schReg_noErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                            <div class="passwordErr text-center text-danger"></div>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

   <script src="js/loginDeptCord.js"></script>
    <%- include('./snippets/scripts.ejs') %>
</body>
</html>
